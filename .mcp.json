{
  "mcpServers": {
    "berry": {
      "type": "stdio",
      "command": "berry",
      "args": [
        "mcp"
      ]
    },
    "linear": {
      "type": "stdio",
      "command": "mcpchain",
      "args": [
        "--key",
        "MCP_LINEAR_API_KEY",
        "-i",
        "--rm",
        "--cap-drop=all",
        "--pull=always",
        "${MCP_LINEAR_IMAGE}"
      ]
    }
  }
}

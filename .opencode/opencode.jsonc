{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "agent": {
    "staff-mentor": {
      "prompt": "{file:../personas/staff-trajectory-mentor.md}",
    },
    "review-professional": {
      "prompt": "{file:../personas/tech-review-professional.md}",
    },
    "personal-assistant": {
      "prompt": "{file:../personas/personal-assistant.md}",
    },
  },
  "lsp": {
    "markdown": {
      "command": ["markdown-oxide"],
      "extensions": [".md"],
    },
  },
  "mcp": {
    "berry": {
      "type": "local",
      "command": ["berry", "mcp"],
      "enabled": true,
    },
    "linear": {
      "type": "local",
      "command": [
        "mcpchain",
        "--key",
        "MCP_LINEAR_API_KEY",
        "-i",
        "--rm",
        "--cap-drop=all",
        "--pull=always",
        "076945025318.dkr.ecr.us-west-2.amazonaws.com/clio/mcp:linear-latest",
      ],
      "enabled": true,
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "ctx7sk-23ee0f38-d9db-476a-be85-0aa333095926",
      ],
      "enabled": true,
    },
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1",
      },
      "models": {
        "gpt-oss:120b-cloud": {
          "name": "GPT-OSS 120b",
        },
        "kimi-k2:1t-cloud": {
          "name": "Kimi-K2",
        },
        "qwen3-coder:480b-cloud": {
          "name": "Qwen-Coder 480b",
        },
        "glm-4.7:cloud": {
          "name": "GLM 4.7",
        },
      },
    },
  },
}

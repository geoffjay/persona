{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "lsp": {
    "markdown": {
      "command": ["markdown-oxide"],
      "extensions": [".md"],
    },
  },
  "mcp": {
    "berry": {
      "type": "local",
      "command": ["berry", "mcp"],
      "enabled": true,
    },
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1",
      },
      "models": {
        "gpt-oss:120b-cloud": {
          "name": "GPT-OSS 120b",
        },
        "kimi-k2:1t-cloud": {
          "name": "Kimi-K2",
        },
        "qwen3-coder:480b-cloud": {
          "name": "Qwen-Coder 480b",
        },
        "glm-4.7:cloud": {
          "name": "GLM 4.7",
        },
      },
    },
  },
}
